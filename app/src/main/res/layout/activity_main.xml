<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etQntTermos"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="@string/qntNum"
        android:importantForAutofill="no"
        android:inputType="numberSigned"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnValidar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAviso"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginBottom="38dp"
        android:textAlignment="center"
        android:textColor="#CA1111"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvValorH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnValidar" />

    <Button
        android:id="@+id/btnValidar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/validar"
        app:layout_constraintBottom_toTopOf="@+id/tvAviso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQntTermos" />

    <TextView
        android:id="@+id/tvValorH"
        android:layout_width="224dp"
        android:layout_height="44dp"
        android:layout_marginBottom="354dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAviso" />
</androidx.constraintlayout.widget.ConstraintLayout>